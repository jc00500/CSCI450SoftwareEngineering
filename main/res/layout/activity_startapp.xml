<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/icon_profile"

        android:layout_width="0dp"
        android:layout_height="0dp"

        android:text="PROFILE"
        android:textColor="#FF59BD"
        android:textSize="15sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/icon_logout"
        app:layout_constraintRight_toRightOf="@+id/icon_up"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/icon_logout"

        android:layout_width="100dp"
        android:layout_height="0dp"

        android:text="LOGOUT"
        android:textColor="#FF59BD"
        android:textSize="15sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/icon_contacts"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/icon_contacts"

        android:layout_width="0dp"
        android:layout_height="100dp"

        android:text="CONTACTS"
        android:textColor="#FF59BD"
        android:textSize="15sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/icon_down"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/compliment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compliment"
        android:textSize="20sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="230dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/icon_up"

        android:layout_width="75dp"
        android:layout_height="75dp"

        android:text="UP"
        android:textColor="#FF59BD"
        android:textSize="15sp"
        android:layout_marginStart="25dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/icon_question"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="30dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/icon_share"

        android:layout_width="100dp"
        android:layout_height="40dp"

        android:text="SHARE"
        android:textColor="#FF59BD"
        android:textSize="15sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/icon_up"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/icon_up" />

    <Button
        android:id="@+id/icon_down"

        android:layout_width="75dp"
        android:layout_height="0dp"

        android:text="DOWN"
        android:textColor="#FF59BD"
        android:textSize="15sp"
        android:layout_marginEnd="24dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/icon_up"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/icon_up" />

    <Button
        android:id="@+id/icon_question"

        android:layout_width="100dp"
        android:layout_height="50dp"

        android:text="Question"
        android:textColor="#FF59BD"
        android:textSize="15sp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/icon_random"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="27dp"
        app:layout_constraintLeft_toRightOf="@+id/icon_up" />

    <Button
        android:id="@+id/icon_random"

        android:layout_width="0dp"
        android:layout_height="50dp"

        android:text="Random"
        android:textColor="#FF59BD"
        android:textSize="15sp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/icon_question"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="50dp"
        app:layout_constraintLeft_toLeftOf="@+id/icon_question" />

</android.support.constraint.ConstraintLayout>